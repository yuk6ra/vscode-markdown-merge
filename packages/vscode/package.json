{
  "name": "mdmerge-vscode",
  "displayName": "Markdown Merge",
  "description": "Merge multiple Markdown files into a single document with TOC and path correction",
  "version": "1.0.0",
  "publisher": "yuk6ra",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yuk6ra/vscode-markdown-merge",
    "directory": "packages/vscode"
  },
  "homepage": "https://github.com/yuk6ra/vscode-markdown-merge",
  "bugs": {
    "url": "https://github.com/yuk6ra/vscode-markdown-merge/issues"
  },
  "keywords": ["markdown", "merge", "combine", "toc", "documentation"],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other", "Formatters"],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mdmerge.mergeFolder",
        "title": "Merge All Markdown"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "mdmerge.mergeFolder",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "build": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node"
  },
  "dependencies": {
    "@mdmerge/core": "*"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.4.0"
  }
}
